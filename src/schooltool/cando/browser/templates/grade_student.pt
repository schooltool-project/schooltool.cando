<tal:block replace="resource_library:schooltool.cando.flourish" />
<div i18n:domain="schooltool.cando" tal:define="skillsets view/skillsets">
  <form method="post" tal:attributes="action string:${context/@@absolute_url}">
    <div class="buttons">
      <input type="submit" class="button-ok" name="SUBMIT_BUTTON" value="Save"
             title="Shortcut: Alt-S" accesskey="S"
             i18n:attributes="value; title; accesskey" />
      <input type="submit" class="button-cancel" name="CANCEL" value="Cancel"
             i18n:attributes="value;" />
    </div>
    <table class="grade-student" id="grade-student">
      <thead>
        <tr>
          <th tal:content="view/activities_header" />
          <th tal:content="view/grades_header" class="student-score" />
        </tr>
      </thead>
      <tbody>
        <tal:loop repeat="skillset skillsets">
          <tr>
            <th colspan="2">
              <tal:block condition="skillset/label|nothing">
                <tal:block content="skillset/label" />:
              </tal:block>
              <tal:block content="skillset/title" />
            </th>
          </tr>
          <tr tal:repeat="skill skillset/skills"
              tal:attributes="class skillset/form_url">
            <td tal:attributes="class skill/css_class"
                tal:content="skill/title" />
            <td class="student-score" tal:content="skill/grade"
                tal:attributes="id skill/name" />
          </tr>
        </tal:loop>
      </tbody>
    </table>
    <div class="buttons">
      <input type="submit" class="button-ok" name="SUBMIT_BUTTON" value="Save"
             title="Shortcut: Alt-S" accesskey="S"
             i18n:attributes="value; title; accesskey" />
      <input type="submit" class="button-cancel" name="CANCEL" value="Cancel"
             i18n:attributes="value;" />
    </div>
  </form>
</div>
