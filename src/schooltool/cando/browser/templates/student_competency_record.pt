<tal:block replace="resource_library:schooltool.cando.flourish" />
<div i18n:domain="schooltool.cando" tal:define="skillsets view/skillsets">
  <form method="post" tal:attributes="action string:${context/@@absolute_url}">
    <table class="data student-scr">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th i18n:translate="">Required</th>
          <th i18n:translate="">Skill</th>
          <th i18n:translate="" class="date">Date</th>
          <th i18n:translate="" class="rating">Rating</th>
        </tr>
      </thead>
      <tbody>
        <tal:loop repeat="skillset skillsets">
          <tr>
            <th colspan="5">
              <tal:block condition="skillset/label|nothing">
                <tal:block content="skillset/label" />:
              </tal:block>
              <tal:block content="skillset/title" />
            </th>
          </tr>
          <tr tal:repeat="skill skillset/skills">
            <td tal:content="skill/label" />
            <td class="flag" tal:content="skill/flag" />
            <td tal:content="skill/title" />
            <td tal:content="skill/date/@@mediumDate|nothing" />
            <td tal:content="skill/rating" />
          </tr>
        </tal:loop>
      </tbody>
    </table>
    <div class="buttons" i18n:domain="schooltool">
      <input type="submit" class="button-cancel" name="CANCEL" value="Done"
             i18n:attributes="value;" />
    </div>
  </form>
</div>
