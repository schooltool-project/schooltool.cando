<div class="manage-view" i18n:domain="schooltool.cando"
     tal:condition="view/has_schoolyear">
  <h3>
    <a tal:attributes="href string:${context/@@absolute_url}/nodes"
       title="Manage nodes" i18n:attributes="title"
       i18n:translate="">
      Nodes
    </a>
  </h3>
  <p i18n:translate="">
    There are
    <metal:block tal:replace="python:len(view.nodes)" i18n:name="count"/>
    nodes defined for
    <metal:block tal:replace="view/schoolyear/title" i18n:name="schoolyear"/>.
  </p>
</div>
